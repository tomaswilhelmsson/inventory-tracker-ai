# Database Configuration
DATABASE_URL="file:./data/inventory.db"
DATABASE_PROVIDER="sqlite"  # sqlite or mysql (for MariaDB)

# Server Configuration
PORT=3000
NODE_ENV="development"

# Authentication
JWT_SECRET="your-secret-key-change-in-production"
BCRYPT_ROUNDS=10

# Google Cloud Storage (for backups)
GCS_BUCKET_NAME="your-gcs-bucket-name"
GCS_KEY_FILE="./path-to-service-account-key.json"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# VAT Configuration
# Default VAT rate as decimal (e.g., 0.25 for 25%, 0.20 for 20%)
# Set to 0 for VAT-exempt regions
DEFAULT_VAT_RATE=0.25
